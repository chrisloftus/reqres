<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
  <description>PHP_CodeSniffer configuration</description>

  <file>./src</file>

  <exclude-pattern>./vendor</exclude-pattern>

  <arg name="colors"/>
  <arg value="sp"/>

  <rule ref="PSR12"></rule>

  <rule ref="PSR1.Methods.CamelCapsMethodName">
    <exclude-pattern>./tests/*</exclude-pattern>
  </rule>
</ruleset>